<% if current_page.last? %>
  <li class="disabled">
    <%= content_tag :a do %>
      <em class="material-icons">chevron_right</em>
    <% end %>
  </li>
<% else %>
  <li class="waves-effect">
    <%= link_to url, :rel => 'next', :remote => remote do %>
      <em class="material-icons">chevron_right</em>
    <% end %>
  </li>
<% end %>
